<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.SignInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_300sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_prod"
            />

        <ImageView
            android:id="@+id/iconImg"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
           android:layout_gravity="center"
            android:src="@drawable/group_1"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India\'s last minute ago"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textSize="@dimen/_12ssp"
            android:text="Login or SignUp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:boxCornerRadiusBottomEnd="16.90dp"
            app:boxCornerRadiusTopStart="16.90dp"
            app:boxCornerRadiusTopEnd="16.90dp"
            app:boxCornerRadiusBottomStart="16.90dp"
            app:endIconMode="clear_text"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="@dimen/_12sdp"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Continue"
            android:layout_gravity="center"
            android:layout_marginHorizontal="26.00dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="#8d99ae"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            app:cornerRadius="18.40dp"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>