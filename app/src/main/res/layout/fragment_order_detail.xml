<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".orderDetailFragment">


    <LinearLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.00dp"
            android:layout_marginTop="19.00dp"
            android:src="@drawable/profile_backbtm"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14.00dp"
            android:layout_marginTop="19.00dp"
            android:fontFamily="@font/averia_gruesa_libre"
            android:text="Order Detail"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.00dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llToolBar"
        android:background="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="40.00dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8.00dp"
        android:elevation="0dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/llorderTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="7.00dp"
            >
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="40.00dp"
                android:layout_height="40.00dp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_status_track"
                android:src="@drawable/shopping_bag_with_minus_sign"
                app:tint="#dddddd" />
            <View
                android:id="@+id/view1"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llToolBar"
                android:background="#C4383232"
                />
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="40.00dp"
                android:layout_height="40.00dp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_status_track"
                android:src="@drawable/bag"
                app:tint="#dddddd" />
            <View
                android:id="@+id/view2"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llToolBar"
                android:background="#C4383232"
                />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="40.00dp"
                android:layout_height="40.00dp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_status_track"
                android:src="@drawable/truck"
                app:tint="#dddddd" />
            <View
                android:id="@+id/view3"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llToolBar"
                android:background="#C4383232"
                />
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="40.00dp"
                android:layout_height="40.00dp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_status_track"
                android:src="@drawable/check_2"
                app:tint="#dddddd" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7.00dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvCornerRadius"
        android:layout_marginTop="48.00dp"
        android:elevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordered Items"
                android:textStyle="bold"
                android:layout_marginTop="20.00dp"
                android:textColor="@color/black"
                android:fontFamily="@font/averia_gruesa_libre"
                android:textSize="20.00dp"
                android:layout_marginStart="@dimen/_12sdp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.00dp"
                android:layout_marginStart="6.00dp"
                android:layout_marginEnd="6.00dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>