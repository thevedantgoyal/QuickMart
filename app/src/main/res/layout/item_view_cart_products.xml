<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="39.00dp"
                android:layout_height="52.00dp"
                android:background="@drawable/bg__see_all"
                android:src="@drawable/milma_milk"
                android:layout_weight="0.5"
                android:padding="4.00dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2.4"
                android:layout_marginStart="@dimen/_6sdp"
                android:weightSum="3"
                >
                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/averia_gruesa_libre"
                    android:text="Nandini Milk"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="13.00sp"
                    />
                <TextView
                    android:id="@+id/tvProductQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="40g"
                    android:fontFamily="@font/averia_gruesa_libre"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textSize="13.00sp"
                    />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹50"
                    android:fontFamily="@font/averia_gruesa_libre"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:textSize="13.00sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llproductCount"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="30.00dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:background="@drawable/bg_productcount_edit"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/decrementCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18.00dp" />


                <TextView
                    android:id="@+id/tvProductCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18.00dp" />
                <TextView
                    android:id="@+id/incrementCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    />

            </LinearLayout>

